<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_arena"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.wzf.slgtest.ui.ArenaActivity">
    <TextView
        android:id="@+id/tv_object_index"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="3">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <Button
                android:id="@+id/btn_my_instance"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="获取当前副本进度"/>
            <Button
                android:id="@+id/btn_battle_request"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="战斗发起"/>
            <Button
                android:id="@+id/btn_pass_level"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="通过某一关卡"/>
            <Button
                android:id="@+id/btn_receive_award"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="兑换宝箱奖励"/>

            <Button
                android:id="@+id/btn_level_award"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="兑换副本宝箱奖励"/>

            <Button
                android:id="@+id/btn_last_pass_level"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="获取最近一次过关信息"/>

        </LinearLayout>

    </ScrollView>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="2">
        <TextView
            android:id="@+id/tv_result"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            />
    </ScrollView>

</LinearLayout>
