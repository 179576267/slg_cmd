<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_arena"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.wzf.slgtest.ui.ArenaActivity">
    <TextView
        android:id="@+id/tv_object_index"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="3">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <Button
                android:id="@+id/btn_use_prop"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="使用道具"/>

            <Button
                android:id="@+id/btn_bg_detail"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="卡牌详情"/>

            <Button
                android:id="@+id/btn_bg_cardlv"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="卡牌升级"/>

            <Button
                android:id="@+id/btn_card_add_exp_by_porp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="根据经验卷轴升级"/>

            <Button
                android:id="@+id/btn_card_merge"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="卡牌合成"/>

            <Button
                android:id="@+id/btn_equip_strong"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="装备强化"/>

            <Button
                android:id="@+id/btn_accessory_lv_up"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="饰品升级"/>

            <Button
                android:id="@+id/btn_accessory_strong"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="饰品强化"/>

            <Button
                android:id="@+id/btn_fate_active"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="宿命激活"/>




        </LinearLayout>

    </ScrollView>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="2">
        <TextView
            android:id="@+id/tv_result"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            />
    </ScrollView>

</LinearLayout>
