<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_arena"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.wzf.slgtest.ArenaActivity">
    <TextView
        android:id="@+id/tv_object_index"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="3">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <Button
                android:id="@+id/btn_init"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="初始化信息"/>
            <Button
                android:id="@+id/btn_preview_rank"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="查看指定官阶的人员"/>
            <Button
                android:id="@+id/btn_challenge"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="官阶挑战"/>

            <Button
                android:id="@+id/btn_sweep"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="官阶扫荡"/>

            <Button
                android:id="@+id/btn_daily"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="领取每日奖励"/>
            <Button
                android:id="@+id/btn_reward"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="兑换奖励"/>
            <Button
                android:id="@+id/btn_reward_record"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="兑换奖励记录"/>

            <Button
                android:id="@+id/btn_integral_reward"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="积分兑换奖励"/>
            <Button
                android:id="@+id/btn_integral_reward_record"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="积分兑换奖励记录"/>

            <Button
                android:id="@+id/btn_buy_challenge_times"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="购买挑战次数"/>

        </LinearLayout>

    </ScrollView>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="2">
        <TextView
            android:id="@+id/tv_result"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            />
    </ScrollView>

</LinearLayout>
